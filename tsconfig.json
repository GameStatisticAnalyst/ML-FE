{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true, // Melewati pemeriksaan tipe pada file deklarasi
    "strict": true, // mode strict
    "noImplicitAny": true, // Mengizinkan penggunaan tipe `any` yang tidak jelas
    "strictNullChecks": true, // pemeriksaan null dan undefined
    "noImplicitThis": false, // Mengizinkan penggunaan `this` yang tidak jelas
    "strictFunctionTypes": false, // pemeriksaan tipe fungsi yang ketat
    "strictPropertyInitialization": false, // Mengizinkan properti yang tidak diinisialisasi di kelas
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "target": "es5",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
    // "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./app",
    "app",
    "../lib/app",
    "."
  ],
  "exclude": ["node_modules"],
  "typeRoots": ["./types", "./node_modules/@types"]
}
